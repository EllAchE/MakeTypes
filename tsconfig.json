{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "moduleResolution": "node16",
        "alwaysStrict": true,
        "inlineSourceMap": true,
        "strictNullChecks": true,
        "lib": [
            "es6", "es2015.collection"
        ],
        "declaration": true
    },
    "include": [
        "lib/**/*.ts",
        "test/common/*.ts"
    ]
}